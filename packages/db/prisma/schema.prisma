generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Registry {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  homepage    String?
  url         String
  repo        String?

  items    RegistryItem[]
  files    RegistryFile[]
  repoInfo RegistryRepo?

  @@map("registries")
}

model RegistryItem {
  id           Int      @id @default(autoincrement())
  registryId   Int      @map("registry_id")
  name         String
  title        String?
  description  String?
  registryDeps String?  @map("registry_deps")
  deps         String?
  type         String?

  registry Registry              @relation(fields: [registryId], references: [id], onDelete: Cascade)
  files    RegistryItemFile[]
  states   RegistryItemState[]

  @@unique([registryId, name])
  @@map("registries_items")
  @@index([name])
}

model RegistryFile {
  id         Int    @id @default(autoincrement())
  registryId Int    @map("registry_id")
  path       String
  type       String?

  registry Registry             @relation(fields: [registryId], references: [id], onDelete: Cascade)
  items    RegistryItemFile[]
  commits  RegistryFileCommit[]

  @@unique([registryId, path])
  @@map("registry_files")
  @@index([path])
}

model RegistryItemFile {
  id     Int @id @default(autoincrement())
  itemId Int @map("item_id")
  fileId Int @map("file_id")

  item RegistryItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  file RegistryFile @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@unique([itemId, fileId])
  @@map("registry_item_files")
}

model RegistryRepo {
  id         Int     @id @default(autoincrement())
  registryId Int?    @map("registry_id") @unique
  repoId     Int   @map("repo_id")
  url        String
  owner      String
  name       String @map("repo")
  stars      Int?
  forks      Int?
  issues     Int?
  watchers   Int?
  openIssues Int?   @map("open_issues")
  archived   Boolean?

  repoCreatedAt DateTime? @map("repo_created_at")
  repoUpdatedAt DateTime? @map("repo_updated_at")
  repoPushedAt  DateTime? @map("repo_pushed_at")

  license     String?

  registry Registry? @relation(fields: [registryId], references: [id])

  
  @@map("registries_repos")
}

model RegistryItemState {
  id              Int      @id @default(autoincrement())
  itemId          Int?     @map("item_id")
  updated         Boolean?
  created         Boolean?
  breakingChanges Boolean? @map("breaking_changes")

  item RegistryItem? @relation(fields: [itemId], references: [id])

  @@map("registry_item_states")
}


model InvalidRegistry {
  id  Int    @id @default(autoincrement())
  name        String? @unique
  description String?
  homepage    String?
  url         String?
  repo        String?

  @@map("invalid_registries")
}

model RegistryCommit {
  id        Int       @id @default(autoincrement())
  commitSha String    @map("commit_sha") @unique
  message   String?
  url       String?
  date      DateTime?

  files RegistryFileCommit[]

  @@map("registry_commits")
}

model RegistryFileCommit {
  id       Int     @id @default(autoincrement())
  fileId   Int     @map("file_id")
  commitId Int     @map("commit_id")
  diff     String?

  file   RegistryFile   @relation(fields: [fileId], references: [id], onDelete: Cascade)
  commit RegistryCommit @relation(fields: [commitId], references: [id], onDelete: Cascade)

  @@unique([fileId, commitId])
  @@map("registry_file_commits")
}