{
  "name": "shadcnrss_v2",
  "private": true,
  "scripts": {
    "db:generate": "bun run --filter @shadcnrss/db db:generate",
    "db:migrate": "bun run --filter @shadcnrss/db db:migrate",
    "build": "turbo run build",
    "dev": "NODE_ENV=development turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "sync": "NODE_ENV=development bun packages/sync/src/cli.ts"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "prettier": "^3.7.4",
    "turbo": "^2.6.3",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
